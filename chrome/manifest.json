{
  "manifest_version": 2,

  "name": "Short Link Privacy",
  "short_name": "SLP",
  "description": "Browser to browser PGP encryption via short links.",
  "version": "0.9.52",
  "options_page": "settings.html",

  "background": {
    "scripts": [
        "bower_components/openpgp/dist/openpgp.min.js",
        "src/modules.js",
        "src/background.js"
    ],
    "persistent": true
  },

  "icons": {
      "19": "images/browser24.png",
      "128": "images/browser128.png"
  },

  "browser_action": {
    "default_popup": "browser.html"
  },

  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "http://slp.li/"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [ "src/content.js" ],
      "css": ["css/content.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "web_accessible_resources": [
      "images/*.png"
  ],

  "author": "Albatros Grigorov"
}
